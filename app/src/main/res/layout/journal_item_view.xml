<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cutsom_border"
    android:orientation="horizontal"
    android:weightSum="100">


    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/toolAddItem"
        android:background="@color/colorAccent"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:elevation="4dp"/>


    <TextView
        android:id="@+id/dateItemV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/journalContentItem"
        android:layout_marginTop="53dp"
        android:text="July 11th 2019"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/journalContentItem"
        android:layout_width="348dp"
        android:layout_height="355dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="79dp"
        android:textSize="@dimen/text_size_medium" />


    <Button
        android:id="@+id/deleteEntry"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/journalContentItem"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:text="Delete Entry"
        android:textColor="#fff" />


</RelativeLayout>