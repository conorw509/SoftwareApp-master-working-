<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:weightSum="10">

    <Button
        android:id="@+id/BackToAudio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonstyleselector"
        android:layout_marginTop="5dp"
        android:text="Back To Audio"
        android:textColor="#ffffff" />

    <ImageView
        android:layout_width="210dp"
        android:layout_height="170dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="90dp"
        android:src="@drawable/music1"
        android:layout_marginStart="90dp" />

    <TextView
        android:id="@+id/songName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="Song Name" />

    <TextView
        android:id="@+id/artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="Artist" />

    <SeekBar
        android:id="@+id/seekBarPlayer"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="90dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="50dp">

        <TextView
            android:id="@+id/timeLapsed"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:text="0:00"
            android:layout_marginStart="70dp" />

        <TextView
            android:id="@+id/timeRemain"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="190dp"
            android:text="-1:50"
            android:layout_marginStart="190dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/previous"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="110dp"
            android:background="@drawable/prev"
            android:gravity="center"
            android:layout_marginStart="90dp" />

        <Button
            android:id="@+id/playBtn"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/play_btn"
            android:gravity="center" />

        <Button
            android:id="@+id/next"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/next"
            android:gravity="center" />
    </LinearLayout>

</LinearLayout>